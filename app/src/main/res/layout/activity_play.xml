<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PlayActivity"
    android:background="@drawable/fone">


    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/iceland"
        android:text="@string/real_zero"
        android:textSize="124sp"
        app:layout_constraintBottom_toTopOf="@id/container1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65"
        android:shadowColor="@color/ultraBlack"
        android:textColor="@color/textButtonAccent"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:gravity="center"/>

    <TextView
        android:id="@+id/timer_view"
        android:text="@string/EMPTY"
        android:textSize="72sp"
        android:layout_margin="8dp"
        android:layout_marginEnd="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/iceland"
        android:shadowColor="@color/ultraBlack"
        android:textColor="@color/textButtonStandard"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        />

    <LinearLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <Button
            android:id="@+id/button1"
            android:textSize="36sp"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="@string/EMPTY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/button2"
            android:layout_weight="1"
            android:fontFamily="@font/iceland"
            android:textColor="@color/plusText"
            android:background="@color/plusFone"
            android:shadowColor="@color/ultraBlack"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            />

        <Button
            android:id="@+id/button2"
            android:textSize="36sp"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="@string/EMPTY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/button1"
            app:layout_constraintRight_toLeftOf="@id/button3"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:fontFamily="@font/iceland"
            android:textColor="@color/minusText"
            android:background="@color/minusFone"
            android:shadowColor="@color/ultraBlack"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            />

        <Button
            android:id="@+id/button3"
            android:textSize="36sp"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="@string/EMPTY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/button2"
            app:layout_constraintRight_toLeftOf="@id/button4"
            android:layout_weight="1"
            android:fontFamily="@font/iceland"
            android:textColor="@color/multiText"
            android:background="@color/multiFone"
            android:shadowColor="@color/ultraBlack"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            />

        <Button
            android:id="@+id/button4"
            android:textSize="36sp"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="@string/EMPTY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/button3"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_weight="1"
            android:fontFamily="@font/iceland"
            android:textColor="@color/divText"
            android:background="@color/divFone"
            android:shadowColor="@color/ultraBlack"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/text_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/iceland"
        android:textSize="64sp"
        android:textColor="@color/divText"
        android:shadowColor="@color/ultraBlack"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        />

</androidx.constraintlayout.widget.ConstraintLayout>